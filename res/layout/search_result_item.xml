<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" 
    android:padding="8dp">
    
    <ImageView
        android:id="@+id/search_bookimage" 
        android:layout_width="100dp"
        android:layout_height="150dp"
        android:adjustViewBounds="true"
        android:src="@drawable/book2"/>
    <LinearLayout 
        android:paddingLeft="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
         <TextView 
             android:paddingTop="8dp"
                android:id="@+id/search_bookname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="编译原理"
                android:textSize="20sp"
                />
          <TextView
              android:paddingTop="4dp"
                android:id="@+id/search_seller" 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="【发布人】CC学长"
                android:textSize="16sp"
                />
      
        <LinearLayout 
            android:padding="4dp"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:orientation="horizontal">
            <TextView
                android:gravity="center"
                android:id="@+id/search_booktype" 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="教材资料"
                android:background="@drawable/result_type"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                />
             <TextView
                android:id="@+id/search_time"  
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="发布时间"
                android:textSize="16sp"
                />
        </LinearLayout>
        
         <Button
             android:padding="16dp"
             android:gravity="center"
                android:id="@+id/connect_seller" 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="联系卖家"
                android:textSize="20dp"
                android:textColor="#e8653b"
                android:focusable="false"
                android:background="@drawable/result_connect"
                />
    </LinearLayout>
        
    
    
    
    

</LinearLayout>
