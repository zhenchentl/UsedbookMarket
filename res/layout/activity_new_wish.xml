<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <LinearLayout 
        android:layout_width="match_parent"
	    android:layout_height="220dp"
	    android:background="@drawable/addwish_top_bg"
	    android:visibility="visible"
	    android:orientation="vertical" >
        <LinearLayout 
	       android:layout_width="match_parent"
	       android:layout_height="48dp"
	       android:orientation="horizontal"
	       >
        <ImageView
            android:id="@+id/addwish_back_img"
            android:layout_width="wrap_content"
            android:layout_height="18dp"
            android:layout_gravity="center"
            android:layout_marginLeft="19dp"
            android:src="@drawable/register_back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="7dp"
            android:gravity="center"
            android:text="创建心愿单"
            android:textColor="#FFFFFF"
            android:textSize="18dp" />
        </LinearLayout>
        <EditText 
            android:id="@+id/addwish_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="请输入书名"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/addwish_name_bg"/>
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="请选择心愿书单分类"
            android:layout_marginTop="10dp"
            android:layout_gravity="center_horizontal"
            android:textColor="#ffffff"/>
        <LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">
            <Button 
                android:id="@+id/addwish_coursebook"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_margin="5dp"
                android:textSize="12sp"
                android:text="教材资料"
                android:background="@drawable/aw_btn_selector"/>
            <Button 
                android:id="@+id/addwish_english"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_margin="5dp"
                android:textSize="12sp"
                android:text="英语强化"
                android:background="@drawable/aw_btn_selector"/>
            <Button 
                android:id="@+id/addwish_japanese"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_margin="5dp"
                android:textSize="12sp"
                android:text="日语强化"
                android:background="@drawable/aw_btn_selector"/>
        </LinearLayout>
                <LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">
            <Button 
                android:id="@+id/addwish_technology"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_margin="5dp"
                android:textSize="12sp"
                android:text="技术养成"
                android:background="@drawable/aw_btn_selector"/>
            <Button 
                android:id="@+id/addwish_master"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_margin="5dp"
                android:textSize="12sp"
                android:text="考研强化"
                android:background="@drawable/aw_btn_selector"/>
            <Button 
                android:id="@+id/addwish_entertain"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_margin="5dp"
                android:textSize="12sp"
                android:text="休闲阅读"
                android:background="@drawable/aw_btn_selector"/>
        </LinearLayout>
        
    </LinearLayout>
   
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    <LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
	<LinearLayout
	    android:layout_width="match_parent"
    	android:layout_height="80dp"
    	android:background="#ffffff"
    	android:orientation="horizontal">
        <ImageView
	        android:id="@+id/addwish_img1"
	    	android:layout_width="60dp"
    		android:layout_height="70dp"
    		android:layout_marginLeft="5dp"
    		android:layout_marginRight="5dp"
    		android:layout_gravity="center_vertical"
	        android:background="@drawable/addbook_plus"></ImageView>
        <ImageView
	        android:id="@+id/addwish_img2"
	    	android:layout_width="60dp"
    		android:layout_height="70dp"
    		android:layout_marginLeft="5dp"
    		android:layout_marginRight="5dp"
    		android:layout_gravity="center_vertical"
	        android:background="@drawable/addbook_plus"></ImageView>
        <ImageView
	        android:id="@+id/addwish_img3"
	    	android:layout_width="60dp"
    		android:layout_height="70dp"
    		android:layout_marginLeft="5dp"
    		android:layout_marginRight="5dp"
    		android:layout_gravity="center_vertical"
	        android:background="@drawable/addbook_plus"></ImageView>
	    <ImageView
	        android:id="@+id/addwish_takephoto"
	    	android:layout_width="wrap_content"
    		android:layout_height="wrap_content"
    		android:layout_gravity="bottom"
    		android:layout_marginBottom="5dp"
    		android:layout_marginLeft="50dp"
	        android:background="@drawable/addbook_takephoto"></ImageView>
	</LinearLayout>
	    
	<ImageView 
	    android:layout_width="80dp"
	    android:layout_height="30dp"
	    android:layout_marginLeft="5dp"
	    android:layout_marginTop="10dp"
	    android:background="@drawable/addwish_wishlabel"/>
	<RelativeLayout 
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	     android:layout_marginTop="5dp">
	<EditText 
	    android:id="@+id/addwish_description"
	    android:layout_width="match_parent"
	    android:layout_height="80dp"
	    android:background="@drawable/addwish_description_bg"/>
	<ImageView 
	    android:id="@+id/addwish_ok_img"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_alignParentBottom="true"
	    android:layout_alignParentRight="true"
	    android:background="@drawable/addwish_ok_img"/>
	</RelativeLayout>
	<ImageView 
	    android:layout_width="80dp"
	    android:layout_height="30dp"
	    android:layout_marginLeft="5dp"
	    android:layout_marginTop="10dp"
	    android:background="@drawable/addwish_connection_label"/>

    
        <LinearLayout
            android:layout_width="match_parent"
    		android:layout_height="150dp"
    		android:layout_marginTop="5dp"
    		android:background="@drawable/addwish_description_bg"
    		android:orientation="vertical">
	         <LinearLayout 
		        android:layout_width="match_parent"
		    	android:layout_height="wrap_content"
		    	android:orientation="horizontal">
		    	<ImageView 
		    	    android:layout_width="wrap_content"
		    	    android:layout_height="wrap_content"
		    	    android:layout_marginLeft="20dp"
		    	    android:layout_gravity="center_vertical"
		    	    android:background="@drawable/addwish_phone"/>
	            <EditText
	                android:id="@+id/addwish_phone"
	        		android:layout_width="match_parent"
			    	android:layout_height="wrap_content"
			    	android:layout_marginLeft="10dp"
			    	android:hint="手机"/>
                </LinearLayout>
           	    <LinearLayout 
		        android:layout_width="match_parent"
		    	android:layout_height="wrap_content"
		    	android:orientation="horizontal">
		    	<ImageView 
		    	    android:layout_width="wrap_content"
		    	    android:layout_height="wrap_content"
		    	    android:layout_marginLeft="20dp"
		    	    android:layout_gravity="center_vertical"
		    	    android:background="@drawable/addwish_qq"/>
	            <EditText
	                android:id="@+id/addwish_qq"
	        		android:layout_width="match_parent"
			    	android:layout_height="wrap_content"
			    	android:layout_marginLeft="10dp"
			    	android:hint="QQ"/>
                </LinearLayout>
            	<LinearLayout 
		        android:layout_width="match_parent"
		    	android:layout_height="wrap_content"
		    	android:orientation="horizontal">
		    	<ImageView 
		    	    android:layout_width="wrap_content"
		    	    android:layout_height="wrap_content"
		    	    android:layout_marginLeft="20dp"
		    	    android:layout_gravity="center_vertical"
		    	    android:background="@drawable/addwish_wechat"/>
	            <EditText
	                android:id="@+id/addwish_wechat"
	        		android:layout_width="match_parent"
			    	android:layout_height="wrap_content"
			    	android:layout_marginLeft="10dp"
			    	android:hint="微信"/>
                </LinearLayout>
        </LinearLayout>
            
</LinearLayout>
</ScrollView>
 </LinearLayout>