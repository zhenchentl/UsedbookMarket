<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content" 
    android:background="#ffffff"
    android:layout_alignParentBottom="true"
    android:orientation="vertical" >
    <TextView  
        android:id="@+id/btn_phone_pop"  
        android:layout_width="fill_parent"  
        android:layout_height="wrap_content" 
        android:gravity="center"
        android:background="#e8653b"
        android:textSize="10sp" 
        android:textColor="#ffffff"
        android:padding="5dp"
        android:text="接下了这个心愿单，在24小时内其他人将无法看到了，快去联系TA吧！或者留下自己的联系方式，帮Ta实现心愿吧"    
        android:textStyle="bold"  
         />  
  
    <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        >
        <LinearLayout 
            android:id="@+id/center_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="vertical">
            <ImageView 
                android:id="@+id/hc_pop_user_img"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@drawable/logo"/>
            <TextView 
                android:id="@+id/hc_pop_user_name"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text="celeste"
                android:textColor="#e8653b"
                android:gravity="center"/>
        </LinearLayout>
        <Button 
            android:id="@+id/hc_pop_sms_btn"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:text="发短信"
            android:textColor="#ffffff"
             android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/center_layout"
            android:layout_marginRight="20dp"
            android:background="@drawable/hc_pop_lost_btn"/>
        <Button 
            android:id="@+id/hc_pop_call_btn"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:text="打电话"
            android:textColor="#ffffff"
            android:layout_marginLeft="20dp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/center_layout"
            android:background="@drawable/hc_pop_ok_btn"/>
        
    </RelativeLayout>
    <TextView 
        android:id="@+id/hc_pop_qq_txv"
        android:layout_width="250dp"
        android:layout_height="30dp"
        android:text="QQ 18742513130"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:textColor="#e8653b"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/hc_connection_bg"
        />
    <TextView 
        android:id="@+id/hc_pop_wechat_txv"
        android:layout_width="250dp"
        android:layout_height="30dp"
        android:text="微信   18742513130"
        android:gravity="center"
        android:textColor="#e8653b"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/hc_connection_bg"
        />
    <TextView 
        android:id="@+id/hc_pop_tell_txv"
        android:layout_width="250dp"
        android:layout_height="30dp"
        android:text="留下我的联系方式"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:layout_gravity="center_horizontal"
        android:textColor="#e8653b"
        android:background="@drawable/hc_connection_bg"
        />
    

</LinearLayout>
</RelativeLayout>
