<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_ll"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    
<ScrollView 
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@drawable/addwish_top_bg">
        <LinearLayout
           android:id="@+id/wishdetail_top_ll" 
	       android:layout_width="match_parent"
	       android:layout_height="48dp"
	       android:orientation="horizontal"
	       >
        <ImageView
            android:id="@+id/wishdetail_back_img"
            android:layout_width="wrap_content"
            android:layout_height="18dp"
            android:layout_gravity="center"
            android:layout_marginLeft="19dp"
            android:src="@drawable/register_back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="7dp"
            android:gravity="center"
            android:text="心愿书单详情"
            android:textColor="#FFFFFF"
            android:textSize="18sp" />
        <LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:gravity="right"
            >
	        <ImageView 
	            android:id="@+id/wishdetail_share_img"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_gravity="center_vertical"
	            android:layout_marginRight="10dp"
	            android:background="@drawable/wishdetail_share_img"/>
        </LinearLayout>
        </LinearLayout>
        <ImageView
            android:id="@+id/wishdetail_bookphoto_img" 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/wishdetail_top_ll"
            android:layout_marginLeft="20dp"
            android:layout_alignParentBottom="true"
            android:background="@drawable/book2"/>
        <TextView 
            android:id="@+id/wishdetail_bookname_txv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/wishdetail_bookphoto_img"
            android:layout_below="@id/wishdetail_top_ll"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:textColor="#ffffff"
            android:textSize="18sp"
            android:text="多媒体图像处理"/>
        <TextView 
            android:id="@+id/wishdetail_booktype_txv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/wishdetail_bookname_txv"
            android:layout_toRightOf="@id/wishdetail_bookphoto_img"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:textColor="#ffffff"
            android:text="分类：技术养成"/>
    </RelativeLayout>


        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                android:orientation="horizontal"
                >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:orientation="vertical" >
                    <ImageView
		                android:id="@+id/wishdetail_user_image"
		                android:layout_width="40dp"
		                android:layout_height="40dp"
		                android:gravity="center"
		                android:adjustViewBounds="true"
		                android:layout_marginTop="5dp"
		                android:layout_marginLeft="5dp"
		                android:background="@drawable/user_image_2" />
                    <TextView
                        android:id="@+id/wishdetail_user_name"
                        android:layout_width="40dp"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:layout_marginLeft="5dp"
                        android:singleLine="true"
                        android:text="姚晗"
                        android:textSize="12sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_gravity="center_vertical"
                    android:orientation="vertical" >
                    <LinearLayout 
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:layout_marginTop="5dp"
                        android:orientation="horizontal">
                        <ImageView 
                            android:layout_width="12dp"
                            android:layout_height="12dp"
                            android:background="@drawable/detail_phone"
                            />
	                    <TextView
	                        android:id="@+id/wishdetail_user_tel"
	                        android:layout_width="wrap_content"
	                        android:layout_height="wrap_content"
	                        android:layout_gravity="left"
	                        android:ellipsize="end"
	                        android:layout_marginLeft="5dp"
	                        android:singleLine="true"
	                        android:text="18840824301"
	                        android:textSize="12sp" />
                    </LinearLayout>
                     <LinearLayout 
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                         android:layout_marginBottom="5dp"
                        android:orientation="horizontal">
                        <ImageView 
                            android:layout_width="12dp"
                            android:layout_height="12dp"
                            android:background="@drawable/detail_q"
                            />
	                    <TextView
	                        android:id="@+id/wishdetail_user_QQ"
	                        android:layout_width="wrap_content"
	                        android:layout_height="wrap_content"
	                        android:layout_gravity="left"
	                        android:ellipsize="end"
	                        android:singleLine="true"
	                        android:layout_marginLeft="5dp"
	                        android:text="937860151"
	                        android:textSize="12sp" />
	                 </LinearLayout>
                     <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                         android:layout_marginBottom="5dp"
                        android:layout_gravity="left"
                        android:ellipsize="end"
                        android:singleLine="true"
                        android:text="(联系我的时候请说明是在校园二手书看到的)"
                        android:textColor="@color/seagreen"
                        android:textSize="12sp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
       
         <ImageView 
		    android:layout_width="75dp"
		    android:layout_height="30dp"
		    android:layout_marginLeft="5dp"
		    android:layout_marginTop="10dp"
		    android:background="@drawable/wishdetail_wishlabel"/>
         <TextView 
             android:id="@+id/wishdetail_description_txv"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:background="#ffffff"
             android:textSize="16sp"
             android:layout_marginLeft="10dp"
             android:layout_marginRight="10dp"
             android:layout_marginTop="10dp"
             android:padding="10dp"/>
         <ImageView 
		    android:layout_width="80dp"
		    android:layout_height="30dp"
		    android:layout_marginLeft="5dp"
		    android:layout_marginTop="10dp"
		    android:background="@drawable/wishdetail_commentlabel"/>
         <TextView
                android:id="@+id/wishdetail_comment_enpty"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:text="亲，这个心愿单暂时没有任何评论喔"
                android:visibility="gone" />

            <com.yunjian.view.NoScrollListView
                android:id="@+id/wishdetail_commentlist"
                android:layout_width="match_parent"
                android:layout_height="match_parent" >
            </com.yunjian.view.NoScrollListView>
        
    </LinearLayout>
   </ScrollView>
   <ImageView 
        android:id="@+id/wishdetail_help_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="90dp"
        android:layout_marginRight="10dp"
        android:layout_above="@+id/wishdetail_comment_img"
        android:background="@drawable/wishdetail_help"/>
   <ImageView 
        android:id="@+id/wishdetail_comment_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="10dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:background="@drawable/wishdetail_comment"/>
</RelativeLayout>